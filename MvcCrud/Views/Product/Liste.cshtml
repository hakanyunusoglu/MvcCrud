@model MvcCrud.Models.Dto.ProductModel

@{
    ViewBag.Title = "Liste";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Ürün Liste</h2>
<div>
    <form action="~/Product/Liste" method="get" class="d-inline-flex">
        <input type="search" name="name" value="" class="form-control" placeholder="Arama" />
        <button class="btn btn-success" type="submit">Ara</button>
    </form>
</div>
@*<p>
    @Html.ActionLink("Create New", "Create")
</p>*@
<hr />
<a class="btn btn-info float-right" href="/Product/Ekle">Yeni Kayıt</a>
<table class="table">
    <tr>
        <th>@Html.DisplayNameFor(x => x.Products.ProductID)</th>
        <th>@Html.DisplayNameFor(x => x.Products.ProductName)</th>
        <th>@Html.DisplayNameFor(x => x.Products.Categories.CategoryName)</th>
        <th>@Html.DisplayNameFor(x => x.Products.Suppliers.CompanyName)</th>
        <th>@Html.DisplayNameFor(x => x.Products.UnitPrice)</th>
        <th>@Html.DisplayNameFor(x => x.Products.Discontinued)</th>
        <th>Detay</th>
        <th>Güncelle</th>
        <th>Sil</th>
    </tr>

@foreach (var item in Model.pList) {
<tr>
    <td>@item.ProductID</td>
    <td>@item.ProductName</td>
    <td>@item.CategoryName</td>
    <td>@item.CompanyName</td>
    <td>@item.UnitPrice</td>
    <td>@item.Discontunied</td>
    
    <th><a href="/Product/Detay/@item.ProductID"><i class="fa fa-info-circle"></i></a></th>
    <th><a href="/Product/Guncelle/@item.ProductID" ><i class="fa fa-edit"></i></a></th>
    <th><a href="/Product/Sil/@item.ProductID"><i class="fa fa-trash"></i></a></th>

</tr>
}

</table>
